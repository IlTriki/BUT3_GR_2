<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.iut.banque" />

    <bean id="listeCompteManager" class="com.iut.banque.controller.ListeCompteManager">
        <property name="client" ref="client"/>
    </bean>

    <bean id="client" class="com.iut.banque.modele.Client">
        <constructor-arg value="Test"/>
        <constructor-arg value="User"/>
        <constructor-arg value="Address"/>
        <constructor-arg value="true"/>
        <constructor-arg value="t.user1"/>
        <constructor-arg value="password"/>
        <constructor-arg value="1234567890"/>
    </bean>

</beans> 